<!-- res/xml/preferences.xml -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

<PreferenceCategory android:title="Ajustes Generales">
        <SwitchPreferenceCompat
            android:key="dark_mode"
            android:title="Modo oscuro"
            android:summary="Activar o desactivar modo oscuro"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Notificaciones">
        <SwitchPreferenceCompat
            android:key="notifications"
            android:title="Activar notificaciones"
            android:summary="Activar o desactivar notificaciones"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Tamaño de letra">
        <ListPreference
            android:key="font_size"
            android:title="Seleccionar tamaño de letra"
            android:summary="Seleccionar tamaño de letra"
            android:entries="@array/font_size_entries"
            android:entryValues="@array/font_size_values"
            android:defaultValue="medium" />
    </PreferenceCategory>

</PreferenceScreen>
