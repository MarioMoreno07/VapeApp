<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    android:elevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorButton"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imagenTienda"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/nombreTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Nombre del sabor"
            android:layout_gravity="center"
            android:textColorHint="@color/colorButonText"
            android:textColor="@color/colorButonText"
            android:textStyle="bold"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/ubicacionTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:hint="Descripcion del vape"
            android:textColorHint="@color/colorButonText"
            android:textColor="@color/colorButonText"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
