<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.NoticiaDetailFragment">

        <ImageView
            android:id="@+id/imagenNoticia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="156dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="46dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagenNoticia"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tituloNoticia"
            android:layout_width="221dp"
            android:layout_height="57dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="132dp"
            android:hint="Titulo de la noticia"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenNoticia" />

        <TextView
            android:id="@+id/contenidoNoticia"
            android:layout_width="327dp"
            android:layout_height="152dp"
            android:layout_marginStart="113dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="114dp"
            android:hint="Contenido de la noticia"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloNoticia" />


        <Button
            android:id="@+id/editar"
            android:layout_width="153dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorButton"
            android:text="Editar noticia"
            android:textColor="@color/colorButonText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eliminar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/eliminar"
            android:layout_width="153dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/rojo"
            android:text="Eliminar noticia"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editar" />
</androidx.constraintlayout.widget.ConstraintLayout>
